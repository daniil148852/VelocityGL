<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.VelocityGL" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Preference theme -->
        <item name="preferenceTheme">@style/PreferenceTheme.VelocityGL</item>
    </style>

    <style name="PreferenceTheme.VelocityGL" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.VelocityGL</item>
    </style>

    <style name="PreferenceFragment.VelocityGL" parent="PreferenceFragment.Material">
        <item name="android:divider">@null</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.VelocityGL.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.VelocityGL.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.VelocityGL.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
